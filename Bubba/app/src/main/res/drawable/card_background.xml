<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color (off-white or customizable) -->
    <solid android:color="#EBD5C5" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional subtle border (can remove if not needed) -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" />

    <!-- Elevation-like shadow effect (for API < 21 use with card/elevation or background tricks) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
